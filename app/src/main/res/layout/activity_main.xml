<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#3949AB"
    tools:context=".MainActivity">

    <LinearLayout
        android:layout_margin="10dp"
        android:padding="5dp"
        android:gravity="center"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/shape_bc"
        android:orientation="vertical"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="100dp"
            android:gravity="center"
            android:orientation="horizontal">

            <ImageView
                android:padding="10dp"
                android:id="@+id/img_btn_1"
                android:layout_width="100dp"
                android:layout_height="match_parent"
                android:layout_margin="5dp"
                android:background="@drawable/shape_item" />

            <ImageView
                android:padding="10dp"
                android:id="@+id/img_btn_2"
                android:layout_width="100dp"
                android:layout_height="match_parent"
                android:layout_margin="5dp"
                android:background="@drawable/shape_item" />

            <ImageView
                android:padding="10dp"
                android:id="@+id/img_btn_3"
                android:layout_width="100dp"
                android:layout_height="match_parent"
                android:layout_margin="5dp"
                android:background="@drawable/shape_item" />
        </LinearLayout>

        <LinearLayout

            android:layout_width="match_parent"
            android:layout_height="100dp"
            android:gravity="center"
            android:orientation="horizontal">

            <ImageView
                android:padding="10dp"
                android:id="@+id/img_btn_4"
                android:layout_width="100dp"
                android:layout_height="match_parent"
                android:layout_margin="5dp"
                android:background="@drawable/shape_item" />

            <ImageView
                android:padding="10dp"
                android:id="@+id/img_btn_5"
                android:layout_width="100dp"
                android:layout_height="match_parent"
                android:layout_margin="5dp"
                android:background="@drawable/shape_item" />

            <ImageView
                android:padding="10dp"
                android:id="@+id/img_btn_6"
                android:layout_width="100dp"
                android:layout_height="match_parent"
                android:layout_margin="5dp"
                android:background="@drawable/shape_item" />
        </LinearLayout>

        <LinearLayout

            android:layout_width="match_parent"
            android:layout_height="100dp"
            android:gravity="center"
            android:orientation="horizontal">

            <ImageView
                android:padding="10dp"
                android:id="@+id/img_btn_7"
                android:layout_width="100dp"
                android:layout_height="match_parent"
                android:layout_margin="5dp"
                android:background="@drawable/shape_item" />

            <ImageView
                android:padding="10dp"
                android:id="@+id/img_btn_8"
                android:layout_width="100dp"
                android:layout_height="match_parent"
                android:layout_margin="5dp"
                android:background="@drawable/shape_item" />

            <ImageView
                android:padding="10dp"
                android:id="@+id/img_btn_9"
                android:layout_width="100dp"
                android:layout_height="match_parent"
                android:layout_margin="5dp"
                android:background="@drawable/shape_item" />
        </LinearLayout>


    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>